<%= form_with model: @article do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% @article.errors.full_messages_for(:title).each do |error| %>
      <%= error %>
    <% end %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
    <% @article.errors.full_messages_for(:body).each do |error| %>
      <%= error %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>